textarea
  display block

  width 100%
  height 150px

  font-family "Lucida Console", Monaco, monospace

#layers
  display inline-block
  width 400px
  margin auto

#console
  position fixed
  bottom 0
  right 0
  width 200px
  height 200px

#tiles
  img:nth-child(n+37)
    border 2px solid red

#props
  position fixed
  right 0
  top 0
  width 200px
  height 200px

#overlays
  position fixed
  right 0
  top 0

  progress
    background-color: #f3f3f3;
    border 0
    width 100px
    height 18px
    border-radius 9px

progress::-webkit-progress-bar
  background-color #f3f3f3
  border-radius 9px

progress::-webkit-progress-value
  background #cdeb8e
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#cdeb8e), color-stop(100%,#a5c956))
  border-radius 9px
